                                    const { id, ...sectionData } = section;
                                    return db.collection('sections').doc(id).set(sectionData);
                                });

                                // Ø§Ø³ØªÙŠØ±Ø§Ø¯ Ø§Ù„Ù‚Ù†ÙˆØ§Øª
                                const channelPromises = data.channels.map(channel => {
                                    const { id, ...channelData } = channel;
