                    }
                    
                    this.channels = this.channels.filter(c => c.id !== channelId);
                    
                    this.saveDataToLocalStorage();
                    this.renderData();
                    
                    this.showAlert('ØªÙ… Ø­Ø°Ù Ø§Ù„Ù‚Ù†Ø§Ø© Ø¨Ù†Ø¬Ø§Ø­', 'success');
                    
                } catch (error) {
